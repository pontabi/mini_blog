
<%= link_to user_path(user), class: "text-decoration-none" do %>
  <div class="card h-100 shadow-sm">
    <div class="card-body d-flex align-items-center">
      <div class=" me-3">
        <%= image_tag 'user_icon.png', alt: 'User Icon', class: 'rounded-circle', size: "50x50" %>
      </div>

      <div>
        <h2 class="h5 mb-1"><%= user.username %></h2>
        <p class="text-muted small"><%= truncate(user.profile_message, length: 200) %></p>
      </div>
    </div>
  </div>
<% end %>
