<%#
@user
@tweet
@reply_tweet
%>

<div class="container">

  <h2><%= @user.username %>さんのツイートにリプライが届いています。</h2>

  <div class="mailer-tweet">
    <div class="mailer-tweet__header">
      <div class="mailer-tweet__header__user">
        <%= @user.username %>
      </div>
      <div class="mailer-tweet__header__time">
        <%= @tweet.created_at.strftime("%Y/%m/%d %H:%M") %>
      </div>
    </div>
    <div class="mailer-tweet__body">
      <%= @tweet.content %>
    </div>
  </div>

  <div class="mailer-reply">
    <div class="mailer-reply__header">
      <div class="mailer-reply__header__user">
        <%= @reply_tweet.user.username %>
      </div>
      <div class="mailer-reply__header__time">
        <%= @reply_tweet.created_at.strftime("%Y/%m/%d %H:%M") %>
      </div>
    </div>
    <div class="mailer-reply__body">
      <%= @reply_tweet.content %>
    </div>
  </div>
</div>

<style>
.container {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
}

.mailer-tweet,
.mailer-reply {
  border: 1px solid #e1e8ed;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 20px;
  background-color: #f5f8fa;
}

.mailer-reply {
  border-left: 4px solid #1da1f2;
  margin-left: 20px;
}

.mailer-tweet__header,
.mailer-reply__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.mailer-tweet__header__user,
.mailer-reply__header__user {
  font-weight: bold;
  font-size: 16px;
  color: #1da1f2;
}

.mailer-tweet__header__time,
.mailer-reply__header__time {
  font-size: 14px;
  color: #657786;
}

.mailer-tweet__body,
.mailer-reply__body {
  font-size: 16px;
  color: #14171a;
  line-height: 1.5;
}

h2 {
  font-size: 18px;
  font-weight: bold;
  color: #14171a;
  margin-bottom: 20px;
}

.mailer-tweet__body {
  margin-bottom: 20px;
}

</style>
