<%= turbo_frame_tag tweet do %>
  <%= form_with(model: tweet, local: true, class: "form-group") do |form| %>
    <div class="card p-3 mb-3 shadow-sm">
      <div class="mb-3">
        <%= form.text_area :content, class: "form-control", rows: 4 %> <!-- Bootstrapのform-controlを使用 -->
      </div>

      <% if tweet.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(tweet.errors.size, "error") %> prohibited this tweet from being saved:</h4>
          <ul>
            <% tweet.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="d-flex justify-content-between">
        <%= link_to "キャンセル", tweet, class: "btn btn-secondary" %> <!-- Bootstrapのbtn-secondaryを使用 -->
        <%= form.submit "保存", class: "btn btn-primary" %> <!-- Bootstrapのbtn-primaryを使用 -->
      </div>
    </div>
  <% end %>
<% end %>
