<% content_for :title, "New tweet" %>

<h1>New tweet</h1>

<% if @tweet.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@tweet.errors.count, "error") %></h2>

    <ul>
      <% @tweet.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @tweet, local: true do |f| %>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to tweets", tweets_path %>
</div>
